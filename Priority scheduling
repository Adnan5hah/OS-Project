#include<stdio.h>
#include<conio.h>
int main()
{
	int BT[20],TAT[20],WT[20],P_no[20];
	int AT[20],j,Prior[20],pos,temp,temp2,temp1;
	float Avg_TAT,Avg_WT,total=0;
	int No_pro;
	int i;
	printf("Enter no of process\n");
	scanf("%d",&No_pro);
	for(i=0;i<No_pro;i++)
	{
		printf("\nProcess %d",i+1,"\n");
		printf("\nEnter Burst time:");
		scanf("%d",&BT[i]);
		printf("Enter Arrival Time:");
		scanf("%d",&AT[i]);
		printf("Enter Priority:");
		scanf("%d",&Prior[i]);
		P_no[i]=i+1;
	}
	for(i=0;i<No_pro;i++)
	{
		
		pos=i;
		for(j=i+1;j<No_pro;j++)
		{
			
			if(Prior[j]<Prior[pos])
				pos=j;
		}
	temp=Prior[i];
	Prior[i]=Prior[pos];
	Prior[pos]=temp;
	temp1=BT[i];
	BT[i]=BT[pos];
	BT[pos]=temp1;
		
	temp2=P_no[i];
	P_no[i]=P_no[pos];
	P_no[pos]=temp2;
	}
	
	WT[0]=0;
	for(i=0;i<No_pro;i++)
	{
		WT[i]=0;
		for(j=0;j<i;j++){
		
			WT[i]+=BT[j];
		}
		total+=WT[i];
		
	}
	Avg_WT=total/No_pro;
	total=0;
	printf("_________________________________________________________");
	printf("\nProcess\t \t    Burst   \t       WT\t     TAT");
	for(i=0;i<No_pro;i++)
	{
		printf("\n",&WT[i],"\n");
		TAT[i] = WT[i]+BT[i];
		total+=TAT[i];
		printf("\nPro no %d \t %6d \t   %6d   \t   %5d",P_no[i],BT[i],WT[i],TAT[i]);
	}
	printf("\n_________________________________________________________\n");
